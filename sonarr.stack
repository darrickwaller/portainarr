version: '1.0'
services:
 sonarr:
    image: linuxserver/sonarr:latest
    container_name: sonarr
    healthcheck:
     test: curl -f http://localhost:8989/ || exit 1
    restart: on-failure:5
    security_opt:
      - no-new-privileges:true
    volumes:
      - /export-sas/samba/media:/data
      - sonarr_config:/config 
    environment:
      TZ: America/Chicago
      PGID: 1000
      PUID: 1000
    ports:
      - 8989:8989
      
volumes:
  sonarr_config:
